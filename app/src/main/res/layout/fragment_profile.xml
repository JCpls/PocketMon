    <data>
        <variable name="viewModel"
            type="com.justin.pocketmon.profile.ProfileViewModel"/>

        <variable
            name="user"
            type="com.justin.pocketmon.data.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_page"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/ic_gameboy3"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:imageUrlWithCircleCrop="@{user.image}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
<!--         android:src="@drawable/ic_profile_icon"-->

        <TextView
            android:id="@+id/profile_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p"
            android:textSize="12sp"
            android:text="Player"
            android:layout_marginTop="10dp"
            android:layout_marginStart="-30dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image" />

        <TextView
            android:id="@+id/profile_player_arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_pixel_arrow_point"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_player"
            app:layout_constraintStart_toStartOf="@+id/profile_player" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p"
            android:textSize="12sp"
            android:text="@{user.name}"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_player"
            app:layout_constraintStart_toEndOf="@+id/profile_player_arrow"
            tools:text ="Justin Yang"/>

