<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemBroadcast"
            type="com.justin.pocketmon.data.Broadcast" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/gray_999999"
        app:strokeWidth="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:shadowColor="@color/cardview_shadow_end_color">

        <TextView
            android:id="@+id/image_trophy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_trophy_gold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/broadcast_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="完成的夢想"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_trophy"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/broadcast_from_who_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="8dp"
           android:background="@drawable/ic_chatroom_send"
            app:layout_constraintStart_toStartOf="@+id/broadcast_title"
            app:layout_constraintTop_toBottomOf="@+id/broadcast_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/broadcast_from_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans"
            android:text="完成者"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@+id/broadcast_from_who_image"
            app:layout_constraintTop_toTopOf="@+id/broadcast_from_who_image"
            app:layout_constraintBottom_toBottomOf="@+id/broadcast_from_who_image"/>


        <TextView
            android:id="@+id/broadcast_time_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/noto_sans"
            android:text="圓夢時間"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/broadcast_from_who"
            app:layout_constraintBottom_toBottomOf="@+id/broadcast_from_who"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>