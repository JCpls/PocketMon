<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemBroadcast"
            type="com.justin.pocketmon.data.Broadcast" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_dream_item2"
        android:shadowColor="@color/cardview_shadow_end_color">

        <TextView
            android:id="@+id/broadcast_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="完成的夢想"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/broadcast_from_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/noto_sans"
            android:text="完成者"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/broadcast_title"
            app:layout_constraintBottom_toBottomOf="@+id/broadcast_title" />

        <TextView
            android:id="@+id/broadcast_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="開始時間"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            app:layout_constraintStart_toStartOf="@+id/broadcast_title"
            app:layout_constraintTop_toBottomOf="@+id/broadcast_title" />


        <TextView
            android:id="@+id/broadcast_time_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="圓夢時間"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            app:layout_constraintTop_toTopOf="@+id/broadcast_time_start"
            app:layout_constraintBottom_toBottomOf="@+id/broadcast_time_start"
            app:layout_constraintStart_toEndOf="@+id/broadcast_time_start"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>