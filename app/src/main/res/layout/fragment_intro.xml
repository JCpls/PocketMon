            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="完成數:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/intro_dream_count"
            app:layout_constraintEnd_toEndOf="@+id/intro_done_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/intro_dream_count"
            app:layout_constraintTop_toTopOf="@+id/intro_dream_count" />

        <TextView
            android:id="@+id/intro_done_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
