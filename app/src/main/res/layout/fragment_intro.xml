        <TextView
            android:id="@+id/intro_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="您目前尚未分享夢想以及邀請好友"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/intro_friend_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_smile_intro"
            app:layout_constraintEnd_toStartOf="@+id/intro_dream_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intro_intro" />

        <ImageButton
            android:id="@+id/intro_dream_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_sword_pixel"
            app:layout_constraintBottom_toBottomOf="@+id/intro_friend_icon"
            app:layout_constraintEnd_toStartOf="@+id/intro_done_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/intro_friend_icon"
            app:layout_constraintTop_toTopOf="@+id/intro_friend_icon"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/intro_done_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_target_intro"
            app:layout_constraintBottom_toBottomOf="@+id/intro_dream_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/intro_dream_icon"
            app:layout_constraintTop_toTopOf="@+id/intro_dream_icon"
            app:layout_constraintVertical_bias="1.0" />






        <TextView
            android:id="@+id/intro_friend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:text="好友數:"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/intro_dream_count"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intro_friend_icon" />

        <TextView
            android:id="@+id/intro_friend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:hint="0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/intro_friend_count"
            app:layout_constraintEnd_toEndOf="@+id/intro_friend_count"
            app:layout_constraintTop_toBottomOf="@+id/intro_friend_count" />

        <TextView
            android:id="@+id/intro_dream_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="夢想數:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/intro_friend_count"
            app:layout_constraintEnd_toStartOf="@+id/intro_done_count"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/intro_friend_count"
            app:layout_constraintTop_toTopOf="@+id/intro_friend_count" />

        <TextView
            android:id="@+id/profile_dream_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:hint="0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/intro_dream_count"
            app:layout_constraintEnd_toEndOf="@+id/intro_dream_count"
            app:layout_constraintTop_toBottomOf="@+id/intro_dream_count" />


        <TextView
            android:id="@+id/intro_done_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="完成數:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/intro_dream_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/intro_dream_count"
            app:layout_constraintTop_toTopOf="@+id/intro_dream_count" />

        <TextView
            android:id="@+id/intro_done_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:hint="0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/intro_done_count"
            app:layout_constraintEnd_toEndOf="@+id/intro_done_count"
            app:layout_constraintTop_toBottomOf="@+id/intro_done_count" />

        <TextView
            android:id="@+id/intro_rocket_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:lineHeight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="120dp"
            android:fontFamily="@font/press_start_2p"
            android:text="請點擊前往登入 立即開始逐夢..."
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/intro_rocket_icon"
            app:layout_constraintTop_toTopOf="@+id/intro_rocket_icon" />
<!--         android:text="This way to log-in and start new chapters now"-->

        <ImageButton
            android:id="@+id/intro_rocket_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ic_rocket_intro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>